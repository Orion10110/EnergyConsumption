}

@section Styles {
   
    @Styles.Render("~/Content/modal")

}
<div>
    <h4>Devices</h4>
    <hr />
    <dl class="dl-horizontal">
        



    </dl>
    <p>
        @Html.ActionLink("Create Newe", "Create", "Device", new { id = @ViewBag.HomeID }, htmlAttributes: new { id = "Create", data_request_url= @Url.Action("CreateJ", "Device") })
        
        
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.W)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.W)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "Device", new { id = item.Id }, htmlAttributes: new {@class="Edit" } )|
                    @Html.ActionLink("Details", "Details", "Device", new { id = item.Id }, null)|
                    @Html.ActionLink("Delete", "Delete", "Device", new { id = item.Id }, htmlAttributes: new { @class = "Delete" })
                </td>
            </tr>
        }

    </table>
</div>

