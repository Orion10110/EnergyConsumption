@model IEnumerable<EnergyConsumption.Models.Device>

@{
    ViewBag.Title = "Devices";
}
<h2>Details</h2>
@section Scripts {
  <script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/classie.js")"></script>
<script src="@Url.Content("~/Scripts/js/modalEffects.js")"></script>


<script>
			// this is important for IEs
			var polyfilter_scriptpath = '/js/';
</script>
<script src="@Url.Content("~/Scripts/js/cssParser.js")"></script>
